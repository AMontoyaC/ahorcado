<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondo"
	android:layout_gravity="center"
	android:gravity="center">
    
    <TextView
        android:id="@+id/txtingnombre"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/txtingnombre"
    	android:textColor="@color/white"
		android:textSize="15sp"/>
    
    <EditText 
        android:id="@+id/ingnombre"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:inputType="text"
    	android:textColor="@color/white"/>
    
    <TextView
        android:id="@+id/txtingpalabra"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/txtingpalabra"
    	android:textColor="@color/white"
		android:textSize="15sp"
		android:paddingTop="20sp"/>
    
    <EditText 
        android:id="@+id/ingpalabra"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:inputType="text"
    	android:textColor="@color/white"/>
    
    <Button 
        android:id="@+id/btnlisto"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/txtlisto"
		android:textSize="35sp"
    	android:textColor="@color/white"
		android:paddingTop="20sp"
		android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>
